<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AnalysisLevel>preview-all</AnalysisLevel>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <CodeAnalysisTreatWarningsAsErrors>true</CodeAnalysisTreatWarningsAsErrors>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <UseCurrentRuntimeIdentifier>true</UseCurrentRuntimeIdentifier>

    <OutputType>Exe</OutputType>
    <AssemblyName>ksail</AssemblyName>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Devantler.ContainerEngineProvisioner.Docker" Version="1.0.2" />
    <PackageReference Include="Devantler.KeyManager.Local.Age" Version="1.1.42" />
    <PackageReference Include="Devantler.KubernetesGenerator.CertManager" Version="1.0.7" />
    <PackageReference Include="Devantler.KubernetesGenerator.Flux" Version="1.0.7" />
    <PackageReference Include="Devantler.KubernetesGenerator.K3d" Version="1.0.7" />
    <PackageReference Include="Devantler.KubernetesGenerator.Kind" Version="1.0.6" />
    <PackageReference Include="Devantler.KubernetesProvisioner.Cluster.K3d" Version="1.0.22" />
    <PackageReference Include="Devantler.KubernetesProvisioner.Cluster.Kind" Version="1.0.22" />
    <PackageReference Include="Devantler.KubernetesProvisioner.GitOps.Flux" Version="1.0.22" />
    <PackageReference Include="Devantler.KubernetesValidator.ClientSide.Schemas" Version="1.0.12" />
    <PackageReference Include="Devantler.KubernetesValidator.ClientSide.YamlSyntax" Version="1.0.12" />
    <PackageReference Include="Spectre.Console" Version="0.49.1" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../KSail.Models/KSail.Models.csproj" />
    <ProjectReference Include="../KSail.Generator/KSail.Generator.csproj" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="$(AssemblyName).Tests" />
  </ItemGroup>
</Project>
